= form_for @expense do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :parlamentarian
    = f.text_field :parlamentarian
  .field
    = f.label :date_issue
    = f.date_select :date_issue
  .field
    = f.label :provider
    = f.text_field :provider
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :url_document
    = f.text_area :url_document
  .actions
    = f.submit 'Save'
