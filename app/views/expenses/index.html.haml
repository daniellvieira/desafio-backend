.row
  .col-md-3.pl-0.pb-3
    .card.text-center.shadow.overflow-inherit
      %img.card-img-top{:alt => "Card image cap", src: image_parlamentarian_url(@parlamentarian.id_register)}/
      .card-body
        %h5.card-title= @parlamentarian.name
  .col-md-9.pr-0
    .card.shadow.overflow-inherit.p-3
      .d-sm-flex.align-items-center.justify-content-between.pb-3.pt-3
        .h4.title-gray= t('.top5_title')
      .list-group
        - @top5_expenses.each do |expense|
          .list-group-item.list-group-item-action
            = details_expense(expense)
.row
  .col-md-6.pl-0.pb-3
    .card.shadow.overflow-inherit.p-3
      .d-sm-flex.align-items-center.justify-content-between.pb-3.pt-3
        .h4.title-gray= t('.month_expense_title')
      %canvas#monthExpense{:height => "100", :width => "100"}
  .col-md-6.pr-0
    .card.shadow.overflow-inherit.p-3
      .d-sm-flex.align-items-center.justify-content-between.pb-3.pt-3
        .h4.title-gray= t('.provider_title')
      %canvas#providerExpense{:height => "100", :width => "100"}
#list
  = render partial: 'list'

